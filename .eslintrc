{
    "ecmaFeatures": {
        "jsx": true
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "brace-style": 0,
        "consistent-return": 0,
        "global-strict": 0,
        "handle-callback-err": 0,
        "new-cap": 0,
        "no-console": 0,
        "no-constant-condition": 0,
        "no-empty": 0,
        "no-lonely-if": 0,
        "no-native-reassign": 0,
        "no-process-exit": 0,
        "no-regex-spaces": 0,
        "no-shadow": 0,
        "no-underscore-dangle": 0,
        "no-unused-expressions": 0,
        "no-use-before-define": 0,
        "one-var": 0,
        "space-in-brackets": 0,
        "strict": 0,
        "vars-on-top": 0,

        "camelcase": 1,
        "dot-notation": 1,
        "eol-last": 1,
        "no-eq-null": 1,
        "no-extend-native": 1,
        "no-loop-func": 1,
        "no-redeclare": 1,
        "no-trailing-spaces": 1,
        "sort-vars": 1,
        "space-unary-ops": [1, { "words": true, "nonwords": false }],
        "yoda": [1, "never"],

        "consistent-this": [2, "self"],
        "curly": [2, "all"],
        "eqeqeq": 2,
        "func-style": [2, "expression"],
        "indent": [2, 2],
        "max-len": [2, 150, 4],
        "new-parens": 2,
        "no-array-constructor": 2,
        "comma-dangle": 2,
        "no-else-return": 2,
        "no-eval": 2,
        "no-ex-assign": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-new-object": 2,
        "no-new-wrappers": 2,
        "no-return-assign": 2,
        "semi-spacing": 2,
        "no-spaced-func": 2,
        "no-sparse-arrays": 2,
        "no-undef": [2],
        "no-unused-vars": 2,
        "quote-props": [2, "as-needed"],
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "space-after-keywords": 2,
        "space-before-function-paren": [2, "never"],
        "space-infix-ops": 2,
        "space-return-throw-case": 2,
        "spaced-comment": [2, "always"]
    }
}
